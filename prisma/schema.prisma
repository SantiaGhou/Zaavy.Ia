// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id @default(cuid())
  sessionId String   @unique
  openaiKey String?
  createdAt DateTime @default(now())
  
  bots Bot[]
  
  @@map("sessions")
}

model Bot {
  id           String   @id @default(cuid())
  sessionId    String
  name         String
  prompt       String?
  type         String   @default("ai") // ai, rules, hybrid
  flowData     String?  // JSON string for flow configuration
  status       String   @default("offline") // online, offline, connecting
  whatsappSessionId String? @unique
  isConnected  Boolean  @default(false)
  messagesCount Int     @default(0)
  createdAt    DateTime @default(now())
  lastActivity DateTime @default(now())
  
  session  Session   @relation(fields: [sessionId], references: [sessionId], onDelete: Cascade)
  messages Message[]
  whatsappSessions WhatsappSession[]
  
  @@map("bots")
}

model Message {
  id          String   @id @default(cuid())
  botId       String
  content     String
  sender      String   // user, bot
  phoneNumber String?
  userName    String?
  timestamp   DateTime @default(now())
  
  bot Bot @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  @@map("messages")
}

model WhatsappSession {
  id          String    @id @default(cuid())
  botId       String
  qrCode      String?
  isActive    Boolean   @default(false)
  connectedAt DateTime?
  lastMessage DateTime?
  createdAt   DateTime  @default(now())
  
  bot Bot @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  @@map("whatsapp_sessions")
}